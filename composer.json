{
    "name": "dwendrich/monolog-config",
    "description": "Simply integrate configurable monolog instances via zend-servicemanager.",
    "type": "library",
    "keywords": [
        "zendframework", "zend servicemanager", "monolog", "logger", "log"
    ],
    "homepage": "https://github.com/dwendrich/monolog-config",
    "authors": [
        {
            "name": "Daniel Wendrich",
            "email": "daniel.wendrich@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^5.6 || ^7.0",
        "monolog/monolog": "^1.11",
        "zendframework/zend-servicemanager": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MonologConfig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonologConfigTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "test-coverage": "phpunit --colors=never --coverage-text"
    }
}
